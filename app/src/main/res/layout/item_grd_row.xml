<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/txt_equipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_grd_equipment_label"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_grd_last_drop_label" />

        <TextView
            android:id="@+id/txt_ultima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/value_not_available" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_grd_tdesc_label" />

        <TextView
            android:id="@+id/txt_tdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_grd_default_elapsed" />
    </LinearLayout>
</LinearLayout>
