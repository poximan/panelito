<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_proxmox_card"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_vm_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="@string/value_not_available" />

        <View
            android:id="@+id/indicator_vm_status"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/led_rojo" />

        <TextView
            android:id="@+id/txt_vm_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/value_not_available" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_vm_cpus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/value_not_available"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_vm_uptime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/value_not_available"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/proxmox_cpu_label"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_cpu_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/value_not_available" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_cpu"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginTop="4dp"
            android:max="100"
            android:progress="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/proxmox_memory_label"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_memory_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/value_not_available" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_memory"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginTop="4dp"
            android:max="100"
            android:progress="0" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_disk_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/value_not_available"
        android:textStyle="bold"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/proxmox_disk_read_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_disk_read_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/value_not_available" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/proxmox_disk_write_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_disk_write_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/value_not_available" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
